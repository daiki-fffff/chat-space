.main_chat
  .main-header
    .main-header__group
      .main-header__groupname
        = @group.name
      %ul.main-header__memberlist
        member:
        %li
          - @group.users.each do |user|
            = user.name   
    = link_to 'Edit',edit_group_path(@group), class:"editbutton" 
  
  .main-message
    .MessageField
      = render @messages
      .message-box
        .message-info
          .message-info__username
          .message-info__date
        .message-text__box
          .message__text

        .message-box
          .message-info
            .message-info__username
            .message-info__date
          .message-text__box
            .message__text

  .Footer
    = form_with model: [@group, @message], html: {class: "Form"}, local: true do |f|
      .Form__contents
        = f.text_field :content, class: 'Form__inputContent', placeholder: 'type a message'
        = f.label :image, class: 'Form__inputImage' do
          = icon('far', 'image', class: 'Form__icon')
          = f.file_field :image, class: 'Hidden'
      = f.submit 'Send', class: 'Form__submit'