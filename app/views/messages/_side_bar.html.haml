.chat-side
  .side-header
    .side-header__box
      %h3.side-header-user-name__box
        = current_user.name
      %ul.side-header__icons
        %li.side-header__icon
          = link_to new_group_path do
            = icon('fas', 'edit')
        %li.side-header__icon
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')

  .chat-side__group-list
    - current_user.groups.each do |group|
      .group
        = link_to '#' do
          .group__name
            藤原家
          .group__message
            おはよう
